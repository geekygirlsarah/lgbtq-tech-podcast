doctype html
html
  head
    meta charset="utf-8"
    meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible"
    meta name="viewport" content="width=device-width"
    title = title
    = stylesheet_link_tag :all

  body
    #wrapper
      h1 = link_to "Turing-Incomplete", "/"
      = partial :header if current_page.url == "/"

      .row
        ul.links
          li = link_to "iTunes", "#TODO", target: '_blank'
          li = link_to "XML", "/podcast.xml", target: '_blank'
          li = link_to "GitHub", "https://github.com/justincampbell/turing-incomplete", target: '_blank'

      #content
        = yield

      .footer
